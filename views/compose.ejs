<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="formTitle">Title</label><br>
    <input class="form-control" id="formTitle" type="text" name="title" required="required" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="formText">Post</label>
    <textarea class="form-control" id="formText" name="msg" rows="6" required="required"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>
